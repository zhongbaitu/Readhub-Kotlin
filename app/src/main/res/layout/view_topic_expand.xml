<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/bg_topic_sub_item"
              android:paddingBottom="@dimen/main_padding_v"
              android:paddingLeft="@dimen/main_padding_o"
              android:paddingRight="@dimen/main_padding_o"
              android:paddingTop="@dimen/main_padding_v">

    <TextView
        android:id="@+id/summaryTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title"
        android:textColor="@color/sub_title"
        android:lineSpacingExtra="6dp"
        tools:text="summary aassssummary aassssummary aassssummary aassssummary aassssummary aassssummary aasss"/>

    <LinearLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sub_title"
        android:orientation="vertical"/>
</LinearLayout>